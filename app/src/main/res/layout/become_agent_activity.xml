<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c1184ee"
        >
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/fanhuiwhite"
            android:padding="@dimen/dp15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/become_agent"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.app.sxgwma.ui.UIButton
        android:id="@+id/btn_commint"
        android:layout_marginTop="60px"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:layout_marginRight="110px"
        android:textColor="@color/white"
        android:layout_marginLeft="110px"
        android:text="@string/commint"
        android:textSize="@dimen/sp20"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_bround"
        />
</com.zhy.autolayout.AutoLinearLayout>